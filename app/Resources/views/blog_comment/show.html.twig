{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blog_comment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_comment.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog_comment.author }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog_comment.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if blog_comment.createdAt %}{{ blog_comment.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comment_edit', { 'id': blog_comment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
