{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <h1>Reybeka</h1>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <img src="{{ asset('img/Photo_Reybeka.png') }}" alt="photo Reybeka Peyrat"/>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            {% for blog_post in blog_posts %}
                <div class="post-preview">
                    <a href="{{ path('blogpost_show', { id:blog_post.id }) }}">
                        <p hidden>je suis un numéro id:{{blog_post.id}}</p>
                        <h2 class="post-title">
                            {{ blog_post.title }}
                        </h2>
                        {#<p class="post-meta">Posté le {{ blog_post.created }}</p>#}
                        <h3 class="post-subtitle">
                            {#je récupère le contenu en appliquant un truncate pour le châpo#}
                           {# {{ blog_post.contenu | truncate(100) }} #}
                            {{ blog_post.content }}
                        </h3>
                        <a class="btn"  href="{{path('blogpost_show', {id: blog_post.id})}}">Lire plus...</a>
                    </a>

                </div>
                <hr>
            {% endfor %}

            <div class="clearfix"><a class="btn btn-primary float-right" href="#">En haut ↑</a></div>
        </div>
    </div>

{% endblock %}
